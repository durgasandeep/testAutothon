<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Rest_Assured_Tests">
	<test name="Verify_Status_Code">
		<classes>
			<class name="com.epam.automation.hometask.restassured.test.RestAssuredTests">
				<methods>
					<include name="verifyStatusCode" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="Verify_Response_Header">
		<classes>
			<class name="com.epam.automation.hometask.restassured.test.RestAssuredTests">
				<methods>
					<include name="verifyResponseHeader" />
				</methods>
			</class>
		</classes>
	</test>
	<test name="Verify_Number_of_Users_in_Response">
		<classes>
			<class name="com.epam.automation.hometask.restassured.test.RestAssuredTests">
				<methods>
					<include name="verifyResponseBody" />
				</methods>
			</class>
		</classes>
	</test> <!-- Test -->
</suite> <!-- Suite -->
